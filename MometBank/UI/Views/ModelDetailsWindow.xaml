<Window x:Class="MometBank.UI.Views.ModelDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Model Detayları" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        FontFamily="Segoe UI">
    <Window.Resources>
        <!-- Modern Button -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sol panel -->
            <ColumnDefinition Width="*"/>
            <!-- Sağ panel -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sol panel: Thumbnail + temel bilgiler -->
        <StackPanel Grid.Column="0" Margin="10">
            <Border CornerRadius="10" Background="White" Padding="10" Margin="0,0,0,20">
                <Image Width="220" Height="220" Stretch="Uniform"
                       Source="{Binding ThumbnailImage}" />
            </Border>

            <TextBlock Text="Dosya:" FontWeight="Bold"/>
            <TextBlock Text="{Binding OriginalFileName}" Foreground="Gray" Margin="0,0,0,10"/>

            <TextBlock Text="Boyut:" FontWeight="Bold"/>
            <TextBlock Text="{Binding FileSize}" Foreground="Gray" Margin="0,0,0,10"/>

            <TextBlock Text="Oluşturulma:" FontWeight="Bold"/>
            <TextBlock Text="{Binding CreatedTime}" Foreground="Gray"/>
        </StackPanel>

        <!-- Sağ panel: düzenlenebilir alanlar -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="Model Adı" FontWeight="Bold"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Açıklama" FontWeight="Bold"/>
            <TextBox Text="{Binding Details, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,10" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

            <TextBlock Text="Taglar" FontWeight="Bold"/>
            <ItemsControl ItemsSource="{Binding ModelTags}" Margin="0,0,0,10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#E3F2FD" CornerRadius="5" Margin="2" Padding="5">
                            <TextBlock Text="{Binding Tag.Name}" Foreground="#1976D2"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <TextBlock Text="Gcode Dosyaları" FontWeight="Bold"/>
            <ListBox ItemsSource="{Binding Gcodes}" DisplayMemberPath="FileName" Height="120"/>
        </StackPanel>

        <!-- Alt butonlar -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Kaydet" Style="{StaticResource ModernButton}" 
                    Width="100" Click="SaveButton_Click"/>
            <Button Content="İptal" Style="{StaticResource ModernButton}" 
                    Width="100" Background="Gray" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
