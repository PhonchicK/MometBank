<Window x:Class="MometBank.UI.Views.AddGcodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yeni Gcode Ekle" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Gcode Dosyası Seçme -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="📂 Dosya Seç" Width="120" Height="36" Margin="0,0,10,0"
                    Click="SelectFileButton_Click"/>
            <TextBlock Text="{Binding SelectedFileName}" VerticalAlignment="Center"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Bilgi Alanları -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="İsim:" FontWeight="Bold"/>
            <TextBox Text="{Binding Name}" Margin="0,0,0,10"/>

            <TextBlock Text="Detaylar:" FontWeight="Bold"/>
            <TextBox Text="{Binding Details}" Height="80" 
                     TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Butonlar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="İptal" Width="100" Height="36" Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Ekle" Width="120" Height="36" Background="#2196F3" Foreground="White"
                    Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
