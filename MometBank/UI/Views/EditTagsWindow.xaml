<Window x:Class="MometBank.UI.Views.EditTagsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Etiketleri Düzenle" Height="500" Width="850"
        WindowStartupLocation="CenterOwner" Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Liste & Düzenleme -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination -->
            <RowDefinition Height="Auto"/>
            <!-- Yeni ekleme/düzenleme -->
        </Grid.RowDefinitions>

        <!-- Tag Listesi -->
        <GroupBox Header="Tag Listesi" Grid.Row="0" Grid.Column="0" Margin="10">
            <ListBox ItemsSource="{Binding PagedTags}"
                     SelectedItem="{Binding SelectedTag, Mode=TwoWay}"
                     DisplayMemberPath="Name"
                     FontSize="14"/>
        </GroupBox>

        <!-- Seçili Tag Düzenleme / Yeni Tag -->
        <GroupBox Header="Tag Düzenle / Yeni Ekle" Grid.Row="0" Grid.Column="1" Margin="10">
            <StackPanel>
                <TextBlock Text="Tag Adı:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding EditableTagName, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="14" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Kaydet" Width="100" Margin="0,0,10,0"
                            Click="SaveOrAddTag_Click"/>
                    <Button Content="Sil" Width="100"
                            Click="DeleteTag_Click"
                            IsEnabled="{Binding IsTagSelected}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Pagination -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="‹ Önceki" Width="100" Margin="5"
                    Click="PreviousPage_Click"/>
            <TextBlock Text="{Binding PageInfo}" 
                       VerticalAlignment="Center"
                       FontWeight="SemiBold" FontSize="14"
                       Margin="20,0"/>
            <Button Content="Sonraki ›" Width="100" Margin="5"
                    Click="NextPage_Click"/>
        </StackPanel>
    </Grid>
</Window>
