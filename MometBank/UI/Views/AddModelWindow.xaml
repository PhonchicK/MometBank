<Window x:Class="MometBank.UI.Views.AddModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ht="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="Yeni Model Ekle" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F4F4F4">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Üst panel -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">
            <Label Content="Model Adı:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="ModelNameTextBox" Width="200" Height="28" Margin="0,0,20,0"/>
            <Button Content="Dosya Seç" Width="100" Height="28" Click="SelectFile_Click"/>
            <TextBlock x:Name="FileNameTextBlock" Margin="10,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Helix Viewport -->
        <ht:HelixViewport3D Grid.Row="1" x:Name="Viewport" Background="White" ZoomExtentsWhenLoaded="True">
            <ht:SunLight/>
            <!-- Yüklenen model burada gösterilecek -->
        </ht:HelixViewport3D>

        <!-- Alt butonlar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Modeli Kaydet" Width="120" Margin="5" Click="SaveModel_Click"/>
            <Button Content="İptal" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
