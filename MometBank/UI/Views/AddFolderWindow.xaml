<Window x:Class="MometBank.UI.Views.AddFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yeni Klasör Ekle"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#F0F2F5"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Text="Yeni Klasör Oluştur" 
                   FontSize="18" 
                   FontWeight="Bold"
                   Foreground="#2196F3"
                   Margin="0,0,0,20"/>

        <!-- Form Alanları -->
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top" >
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Klasör Adı:" FontWeight="SemiBold"/>
                <TextBox x:Name="FolderNameTextBox" Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Açıklama:" FontWeight="SemiBold"/>
                <TextBox x:Name="FolderDetailsTextBox" Height="70" AcceptsReturn="True" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>

        <!-- Butonlar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="İptal" Width="80" Margin="0,0,10,0" 
                    Background="LightGray" Click="CancelButton_Click"/>
            <Button Content="Kaydet" Width="100" 
                    Background="#2196F3" Foreground="White"
                    FontWeight="SemiBold"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
